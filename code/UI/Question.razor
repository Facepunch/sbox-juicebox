@using System;
@using Sandbox;
@using Sandbox.UI;
@using Facepunch.Juicebox;

@namespace Facepunch.Juicebox.UI
@attribute [StyleSheet( "/ui/styles/Question.scss" )]
@inherits Panel

<root>
    <div class="question-container">
        <span class="question-text styled">@GameState.Question</span>
    </div>
</root>

@code {
    protected override int BuildHash()
    {
        return HashCode.Combine( GameState.Question );
    }
}
