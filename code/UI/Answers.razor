@using System;
@using Sandbox;
@using Sandbox.UI;
@using Facepunch.Juicebox;

@namespace Facepunch.Juicebox.UI
@attribute [StyleSheet( "/ui/styles/Answers.scss" )]
@inherits Panel

@code {
    public bool ShowResults { get; set; } = false;
}

<root>
    
    @foreach (var player in GameState.Players)
    {
        if (string.IsNullOrEmpty(player.Answer))
        {
            continue;
        }

        <div class="answer-box green">
            @if (ShowResults)
            {
                <div class="answer-header">
                    <div class="number-container">
                        <span class="styled">@player.VotesReceived</span>
                    </div>
                </div>
            }
            <div class="answer-body">
                <h1 class="answer-text">@player.Answer</h1>
            </div>
            @if (ShowResults)
            {
                <div class="answer-footer">
                    <div class="player-bar">
                        <span class="styled">@player.Name</span>
                    </div>
                </div>
            }
        </div>
    }

